.top-bg {
  width: 100%;
}

.telecom {
  position: absolute;
  top: 20rpx;
  left: 25rpx;
  width: 25%;
}

.rule {
  position: absolute;
  top: 20rpx;
  right: 25rpx;
  color: #fff;
  font-size: 26rpx;
}

.draw {
  margin: -330rpx 7% 0;
  position: relative;
}

.draw > .box-bg {
  width: 100%;
}

.draw > .tip {
  position: absolute;
  left: -25rpx;
  top: 110rpx;
  font-size: 32rpx;
  color: #ff7a24;
  font-weight: bold;
  width: 25rpx;
  background: url("data:image/png;base64,") top/100% 100% no-repeat;
  padding: 20rpx;
}

.draw > .prize {
  position: absolute;
  top: 12%;
  width: 90%;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  flex-wrap: wrap;
}

.draw > .prize > view {
  width: 33.3%;
  text-align: center;
  margin-bottom: 4%;
  position: relative;
}

.draw > .prize > view > image {
  width: 60%;
}

.draw > .prize > view > text {
  position: absolute;
  left: 50rpx;
  bottom: 15rpx;
  width: 50rpx;
  font-size: 23rpx;
}
