.layer {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #00000080;
  display: flex;
  align-items: center;
  color: #fff;
}

.dialog {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  right: 0;
  width: 75%;
  margin: auto;
  padding: 0 40rpx;
  background: #fff;
  max-height: 75%;
  display: flex;
  flex-direction: column;
  background: #802cc4;
  border-radius: 8px;
  border: 3px solid #bc69ff;
}

scroll-view {
  max-height: 60vh;
  margin-bottom:  30rpx;
}
