button {
  line-height: 1;
  padding: 15rpx 0;
  font-weight: bold;
  color: #7728b7;
  background: #ffde29;
  border-radius: 30rpx;
}

.layer {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #00000080;
  display: flex;
  align-items: center;
  color: #fff;
  animation: fadeIn 0.2s;
}

.dialog {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  right: 0;
  width: 75%;
  margin: auto;
  padding: 0 40rpx;
  background: #fff;
  max-height: 75%;
  display: flex;
  flex-direction: column;
  background: #802cc4;
  border-radius: 8px;
  border: 3px solid #bc69ff;
  animation: zoomIn 0.2s;
}

scroll-view {
  max-height: 60vh;
  margin-bottom: 30rpx;
}

.footer {
  margin-bottom: 20rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes zoomIn {
  from {
    transform: scale(0);
  }

  to {
    transform: scale(1);
  }
}
